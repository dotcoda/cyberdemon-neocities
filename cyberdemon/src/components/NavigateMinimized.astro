---
import "../styles/nav.css";
const { pathname } = Astro.url;
---

<div
  class="window violet glass active mobileHidden"
  style="width:100%; background-color: #69a0ff;"
>
  <div class="title-bar">
    <div class="title-bar-text">NAVIGATE</div>
    <div class="title-bar-controls" aria-hidden="true">
      <button aria-label="Minimize"></button>
      <button aria-label="Maximize"></button>
      <button aria-label="Close"></button>
    </div>
  </div>
 
  <div class="window-body">
    <ul role="menubar">
      <li role="menuitem"><a style="color:black;" href="/sitemap">Sitemap</a></li>
  </ul>
  
  <div class="nav">
    <a class="home" href="/home"><img src="../../images/graphics/1020.ico" aria-hidden="true" alt=""> Return Home</a>

      <details open={pathname.startsWith("/about") || pathname.startsWith("/love")} style="margin-top: 10px;">
        <summary class="personal"><img src="../../images/graphics/81.ico" aria-hidden="true" alt=""> Personal</summary>
        <ul class="tree-view has-connector">
          <li><a href="/about">About</a></li>
          <ul>
            <li><a href="/about/more">More</a></li>
          </ul>
          <li><a href="/love">Lovepage</a></li>
        </ul>
      </details>

      <details open={pathname.startsWith("/resources") || pathname.startsWith("/info") || pathname.startsWith("/layouts")}>
      <summary><img src="../../images/graphics/25.ico" aria-hidden="true" alt=""> Sitely</summary>
      <ul class="tree-view">
        <li><a href=/resources>Resources</a></li>
        <li><a href="/info">Site info/Credits</a></li>
        <li><a href="/layouts">Layouts</a></li>
      </ul>
    </details>

    <details open={pathname.startsWith("/blog") || pathname.startsWith("/microblog") || pathname.startsWith("/articles")}>
      <summary><img src="../../images/graphics/102.ico" aria-hidden="true" alt=""> Writing</summary>
      <ul class="tree-view">
        <li><a href="/blog">Blog</a></li>
        <li><a href="/microblog">Microblog</a></li>
      </ul>
    </details>

    <details open={pathname.startsWith("/media") || pathname.startsWith("/cameras")}>
        <summary><img src="../../images/graphics/23.ico" aria-hidden="true" alt=""> Creative</summary>
  
        <ul class="tree-view has-connector">
        <li><a href="/media">Media</a></li>
          <li><a href="/cameras">Cameras</a></li>
          <ul>
            <li><a href="/cameras/gallery">Gallery</a></li>
          </ul>
        </ul>
      </details>
      </div>
  </div>
</div>
