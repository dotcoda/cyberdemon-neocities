---
import Layout from '../../layouts/Layout.astro';
import '../../styles/media/home.css';
---

<Layout pageName="media pages">
   
        <div class="flex mainBox">
            <div class="flexChild child-equal">


                <div class="border radius-10">
                    <div class="border radius-5">
                        <p>hello and welcome to my media page! this will be a hub for all my autistic little interests!
                            feel take a peek around</p>
                    </div>
                </div>

                <p>these pages are always a work in progress!</p>

              
            </div><!--end first tier-->

            <div class="flexChild child-small">
                <h2> what im up to...</h2>


                <div id="current">

                    <h5>watching</h5>
                    <div class="entry">
                        <img
                            src="https://resizing.flixster.com/-XZAfHZM39UwaGJIFWKAE8fS0ak=/v3/t/assets/p7892422_b_v8_aa.jpg">
                        <div class="entry-info">
                            <p>dexter</p>
                            <div class="progress">
                                <p>progress:</p>
                                <div role="progressbar" class="animate">
                                    <div style="width: 42%"></div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <h5>reading</h5>
                    <div class="entry">
                        <img src="https://m.media-amazon.com/images/I/51X1qExl0tL._AC_UF1000,1000_QL80_.jpg">
                        <div class="entry-info">
                            <p>fear and trembling</p>
                            <div class="progress">
                                <p>progress:</p>
                                <div role="progressbar" class="animate">
                                    <div style="width: 10%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5>playing</h5>
                    <div class="entry">
                        <img src="https://upload.wikimedia.org/wikipedia/en/f/fd/Logo_of_Stardew_Valley.png">

                        <div class="entry-info">
                            <p>stardew valley</p>
                            <div class="progress">
                                <p>progress:</p>
                                <div role="progressbar" class="marquee"></div>
                            </div>
                        </div>

                    </div>
                </div>

            </div><!--end second tier-->

           



</Layout>